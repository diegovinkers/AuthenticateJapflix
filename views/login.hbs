<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/style.css">
    <title>Login</title>
  </head>
  <body>
    <nav>
      <h1 class="fw-light"><img src="img\japflix.png" style="height: 43px;" alt="japflixIMG"></h1>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
      </ul>
    </nav>

    <div
      style="display: flex; justify-content: center; align-items: center; height: 80vh;"
    >
      <div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <div class="card col-md-8 bg-dark text-white"> <!-- Añade la clase de fondo y color de texto aquí -->
      <div class="card-header">
        Login
      </div>
      <div class="card-body">
        <form class="row g-3 needs-validation" action="/auth/login" method="POST" novalidate="">
          <div class="col-md-12">
            <label for="email" class="text-white">Correo Electrónico</label>
            <input
              type="text"
              class="form-control"
              id="email"
              placeholder="name@example.com"
              name="email"
              required=""
            />
            <div class="invalid-feedback text-white">
              Ingrese su correo electrónico.
            </div>
          </div>
          <div class="col-md-12">
            <label for="password" class="form-label text-white">Contraseña</label>
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Contraseña"
              name="password"
              required=""
            />
            <div class="valid-feedback text-white">
              ¡Se ve bien!
            </div>
          </div>
          <div class="col-12 mt-3">
            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
          </div>
        </form>
      </div>   
       {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
      {{/if}}
    </div>
  </div>

    </body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</html>
